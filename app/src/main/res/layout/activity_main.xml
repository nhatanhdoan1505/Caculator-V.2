<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="100dp"
        android:id="@+id/edt"
        android:layout_marginBottom="50dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="AC"
            android:layout_weight="2"
            android:textColor="#f0f8ff"
            android:background="#34495e"
            android:layout_margin="1.5dp"
            android:id="@+id/btn_AC"
            android:onClick="onclickAC"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="DE"
            android:layout_weight="1"
            android:textColor="#f0f8ff"
            android:background="#34495e"
            android:layout_margin="1.5dp"
            android:id="@+id/btn_DE"
            android:onClick="onclickDE"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="/"
            android:layout_weight="1"
            android:textColor="#f0f8ff"
            android:background="#34495e"
            android:layout_margin="1.5dp"
            android:id="@+id/btn_divide"
            android:onClick="insert"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f0f8ff"
            android:background="#34495e"
            android:text="7"
            android:layout_margin="1.5dp"
            android:id="@+id/btn_7"
            android:onClick="insert"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f0f8ff"
            android:background="#34495e"
            android:text="8"
            android:layout_margin="1.5dp"
            android:id="@+id/btn_8"
            android:onClick="insert"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f0f8ff"
            android:background="#34495e"
            android:text="9"
            android:layout_margin="1.5dp"
            android:id="@+id/btn_9"
            android:onClick="insert"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f0f8ff"
            android:background="#34495e"
            android:text="x"
            android:layout_margin="1.5dp"
            android:id="@+id/btn_mutiply"
            android:onClick="insert"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f0f8ff"
            android:background="#34495e"
            android:text="4"
            android:layout_margin="1.5dp"
            android:id="@+id/btn_4"
            android:onClick="insert"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f0f8ff"
            android:background="#34495e"
            android:text="5"
            android:layout_margin="1.5dp"
            android:id="@+id/btn_5"
            android:onClick="insert"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f0f8ff"
            android:background="#34495e"
            android:text="6"
            android:layout_margin="1.5dp"
            android:id="@+id/btn_6"
            android:onClick="insert"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f0f8ff"
            android:background="#34495e"
            android:text="-"
            android:layout_margin="1.5dp"
            android:id="@+id/btn_minus"
            android:onClick="insert"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f0f8ff"
            android:background="#34495e"
            android:text="1"
            android:layout_margin="1.5dp"
            android:id="@+id/btn_1"
            android:onClick="insert"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f0f8ff"
            android:background="#34495e"
            android:text="2"
            android:layout_margin="1.5dp"
            android:id="@+id/btn_2"
            android:onClick="insert"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f0f8ff"
            android:background="#34495e"
            android:text="3"
            android:layout_margin="1.5dp"
            android:id="@+id/btn_3"
            android:onClick="insert"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f0f8ff"
            android:background="#34495e"
            android:text="+"
            android:layout_margin="1.5dp"
            android:id="@+id/btn_plus"
            android:onClick="insert"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f0f8ff"
            android:background="#34495e"
            android:text="."
            android:layout_margin="1.5dp"
            android:id="@+id/btn_point"
            android:onClick="insert"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f0f8ff"
            android:background="#34495e"
            android:text="0"
            android:layout_margin="1.5dp"
            android:id="@+id/btn_0"
            android:onClick="insert"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="#f0f8ff"
            android:background="#34495e"
            android:text="="
            android:layout_margin="1.5dp"
            android:id="@+id/btn_equal"
            android:onClick="equal"/>

    </LinearLayout>

</LinearLayout>